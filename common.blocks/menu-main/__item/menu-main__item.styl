.menu-main__item
  display flex
  list-style-type: none
  text-align: center
  text-transform: uppercase
  width 100%
  border-top: 1px solid lighten($color-secondary, 20%)
  border-bottom: 1px solid darken($color-secondary, 10%)
  // border-top: 1px solid #9ac2db
  // border-bottom: 1px solid #678fa8

  &:last-of-type
    position relative
    border-bottom: none

    &::after
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      content: ""
      box-shadow: inset 0 -5px 15px -5px rgba(0,0,0,.8)

  @media ({$md})
    display block
    border: none
    width: 20%
    &:last-of-type::after
      box-shadow: none
    &:nth-of-type(2)
      margin-right: 120px
    &:nth-of-type(3)
      margin-left: 120px




