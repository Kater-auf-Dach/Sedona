.menu-main__item
  list-style-type: none
  text-align: center
  text-transform: uppercase
  width 100%
  display flex
  border-top: 1px solid lighten($color-secondary, 20%)
  border-bottom: 1px solid darken($color-secondary, 20%)
  // border-top: 1px solid #9ac2db
  // border-bottom: 1px solid #678fa8

  &:last-child
    border-top: none
  &:last-child
    border-bottom: none
    box-shadow: inset 0 -5px 14px -5px rgba(0,0,0,.8)

  @media ({$md})
    border: none


